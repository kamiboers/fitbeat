<div id="backstretch3">
  <div class="container play-box fade-out">

<% if @playlist.intensity == "high" %>
  <a class="btn btn-lg btn-block btn-danger">
    High Intensity 
  <% elsif @playlist.intensity == "med" %>
  <a class="btn btn-lg btn-block btn-warning">
    Medium Intensity 
  <% elsif @playlist.intensity == "low" %>
  <a class="btn btn-lg btn-block btn-success">
    Low Intensity 
  <% elsif @playlist.intensity == "rest" %>
  <a class="btn btn-lg btn-block btn-info">
    Restful 
  <% else %>
  <a class="btn btn-lg btn-block">
  <% end %>
Playlist: <%= @playlist.name[0..-11] %>
</a>

<div class="container form-group centered duck">
<%= form_for :playlists do |f| %>
  <div class="btn-group" data-toggle="buttons">

  <a class="btn btn-sm btn-secondary-outline disabled">
    Choose a Genre
  </a>
  <a class="btn btn-sm btn-secondary-outline disabled bubble"> => </a>
  <label class="btn btn-sm btn-primary-outline">
    <input type="radio" name="genre" value="indie">Indie
  </label>
  <label class="btn btn-sm btn-warning-outline">
    <input type="radio" name="genre" value="dance">Dance
  </label>
  <label class="btn btn-sm btn-success-outline">
    <input type="radio" name="genre" value="hip-hop">Hip-Hop
  </label>
  <label class="btn btn-sm btn-info-outline">
    <input type="radio" name="genre" value="classical">Classical
  </label>
  <label class="btn btn-sm btn-warning-outline">
    <input type="radio" name="genre" value="pop">Pop
  </label>
  <label class="btn btn-sm btn-primary-outline">
    <input type="radio" name="genre" value="bonobo">Bonobo
  </label>
  <label class="btn btn-sm btn-danger-outline">
    <input type="radio" name="genre" value="death">Death Metal
  </label>
  <label class="btn btn-sm btn-secondary-outline">
    <input type="radio" name="genre" value="none">None
  </label>
  <a class="btn btn-sm btn-secondary-outline disabled bubble l-align"> <= </a>
</div>
  <%= f.submit "Autopopulate My Playlist", class: "btn btn-primary duck" %>


<% end %>
</div>

</div>
</div>